@model DLOA.Model.WorkFlowModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>

    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/themes/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script>

        function EditSubmit()
        {
            $('form').submit();
        }

        function EditAfter(msg)
        {
            window.parent.EditAfter(msg);
        }
    </script>
</head>
<body>
@using (Ajax.BeginForm("Edit", "WorkFlowModel", new AjaxOptions
{
    OnSuccess = "EditAfter"
}))
{
    
    <input type="hidden"  name="ModelId" value="@Model.ModelId" />
    
    <label>模型名称</label>
    @Html.TextBoxFor(m => m.ModelTitle,new {@class="form-control"})
    <label>控制器</label>

    @Html.TextBoxFor(m => m.ControllerName,new {@class="form-control"})
    <label>行为名称</label>
    @Html.TextBoxFor(m => m.ActionName, new { @class = "form-control" })
        <label>备注</label>
    @Html.TextBoxFor(m => m.Remark, new { @class = "form-control" })
    


    
 
}
</body>
</html>
