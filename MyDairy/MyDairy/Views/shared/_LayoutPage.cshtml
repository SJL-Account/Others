<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel=" stylesheet" />
    <script src="~/Content/scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>
</head>
<body>
    
 <header>
     <nav class="navbar navbar-inverse" role="navigation">

         <div class="navbar-header">

             <a class=" navbar-brand">Diary</a>
         </div>
         <div class="collapse navbar-collapse">
             <ul class="nav navbar-nav navbar-right">
                 @{
                     var UserName = Session["User"] == null ? string.Empty : ((MyDiary.Models.User)Session["User"]).UserName;
                     
                 }

                 <li><a class="#">@UserName</a></li>

                 @{
                     if (string.IsNullOrEmpty(UserName))
                     {
                         <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        
                     }
                     else
                     {
                         <li>@Html.ActionLink("Logoff", "Logoff", "Account")</li>

                         
                     }
                 }
                 
             </ul>
         </div>
     </nav>
 </header>
    
    <div class="container">

        @RenderBody()
    </div>
    <footer>
        <div class="  clearfix navbar  navbar text-center text-muted">
            &copy;@DateTime.Now.Year SJL.COM
        </div>
    </footer>
    
</body>
</html>
