@model MyDiary.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/shared/_LayoutPage.cshtml";
}





    <h2>Register</h2>

        @using (Html.BeginForm("Register","Account",FormMethod.Post))
        {
            <div class="form-group">

                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(n => n.UserName, new { @class = "form-control", @name="UserName" })


            </div>
            
            <div class="form-group">
                @Html.LabelFor(m=>m.Password)
                @Html.PasswordFor(n => n.Password, new {@class="form-control" ,@name="Password"})
            </div>
            <div>
                @Html.ValidationSummary(true)
            </div>
                    <div class="form-group col-sm-12">
            <div class="btn-group pull-right">

                <button type="submit" class="btn btn-default btn-primary">Register</button>
                @Html.ActionLink("Login", "Login", "Account", "", new { @class = "btn" })

            </div>

        </div>

        }

